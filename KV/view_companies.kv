#:kivy 2.0.0
<ViewCompanies>
    Background:
    Navbar:
    FloatLayout:
        size: root.width, root.height
        MDLabel:
            pos_hint: {'center_x': .5, 'y': .77}
            halign: 'center'
            theme_text_color: "Custom"
            text_color: 0, 150/255, 136/255, 1
            text: "Companies"
            font_style: 'H6'
            padding: (10,15)
            size_hint_y: None
            height: self.texture_size[1]
            font_size:30
        MDCard:
            size_hint : (0.9,0.7)
            pos_hint: {'center_x': .5, 'center_y': .4}
            elevation: 20
            orientation: 'vertical'
            spacing: 2
            MDGridLayout:
                size: (self.parent.width,60)
                height: self.minimum_height
                size_hint_x: None
                size_hint_y: None
                cols: 4
                row_default_height: 60
                row_force_default: True
                adaptive_width: True
                MDLabel:
                    text: ""
                    size_hint: (0.1,0.1)
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "Name"
                    font_size: 20
                    halign: 'center'
                    size_hint_x: 0.3
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "Role"
                    font_size: 20
                    size_hint_x: 0.3
                    halign: 'center'
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "Package"
                    font_size: 20
                    size_hint_x: 0.3
                    halign: 'center'
                    md_bg_color: app.theme_cls.primary_color
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size: (self.parent.width,self.parent.height-60)
                GridLayout:
                    id: grid
                    size_hint_y: None
                    height: self.minimum_height
                    cols: 4
                    row_default_height: 60
                    adaptive_width: True
            
    MDFloatingActionButtonSpeedDial:
        data: {'add':'notebook-plus-outline', 'delete':'delete'}
        root_button_anim: True
        label_text_color: (1,1,1,1)
        callback: self.parent.add_delete


<CompanyDialog>:
    orientation: "vertical"
    spacing: "8dp"
    size_hint_y: None
    height: 350
    MDTextField:
        id: dialog_package
        hint_text: "Package"
    GridLayout:
        cols: 2
        MDLabel:
            text: "Platform"
        Spinner:
            id: dialog_platform
            pos_hint:{"x":0.08}
            values:('On-campus','Off-campus')
            size:300,44
            size_hint:None,None
            color_mode: 'accent'
            background_normal:""
            background_color:(98/255,0/255,234/255,1)
    MDTextField:
        id: dialog_website
        hint_text: "Website"
    MDGridLayout:
        cols: 3
        width: self.parent.width
        adaptive_width: True
        # row_default_height: 20
        spacing: 10
        MDLabel:
            text: "Role"
            size_hint: (0.2,0.1)
        MDRectangleFlatButton:
            id: dialog_role_spinner
            on_release: root.menu.open()
            size_hint: 0.3, None
        MDTextField:
            id: dialog_role_text
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            size_hint: 0.3, None
            icon_right:'shield-account-outline'
            hint_text: "role"
            disabled: True
    MDTextField:
        id: dialog_branch
        hint_text: "Branch"
    MDRoundFlatButton:
        id: edit
        text: "Edit"
        on_press: app.root.get_screen('view_companies').edit_company()

<CompanyTitle>
    text: "[u][ref=world]7[/ref][/u]"
    markup : True
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color
    font_size: 20
    halign: 'center'
    size_hint_x: 0.3
    on_ref_press: app.root.get_screen('view_companies').full_details(self.id)

<CompanyLabel>
    text: "E-Resources"
    font_size: 20
    size_hint_x: 0.3
    halign: 'center'

<CompanyCheckbox>
    size_hint: (0.1,0.1)