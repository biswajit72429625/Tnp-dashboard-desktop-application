#:kivy 2.0.0
<ViewCompanies>
    Navbar:
    
    FloatLayout:
        size: root.width, root.height
        MDLabel:
            text: "Company"
            pos_hint: {'center_x':0.5,'center_y':0.9}
            font_style: 'H4'
            halign: 'center'
        MDCard:
            size_hint : (0.9,0.7)
            pos_hint: {'center_x': .5, 'center_y': .5}
            elevation: 20
            orientation: 'vertical'
            spacing: 2
            MDGridLayout:
                size: (self.parent.width,60)
                height: self.minimum_height
                size_hint_x: None
                size_hint_y: None
                cols: 4
                row_default_height: 60
                row_force_default: True
                adaptive_width: True
                MDLabel:
                    text: ""
                    size_hint: (0.1,0.1)
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "Name"
                    font_size: 20
                    halign: 'center'
                    size_hint_x: 0.3
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "Role"
                    font_size: 20
                    size_hint_x: 0.3
                    halign: 'center'
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "Package"
                    font_size: 20
                    size_hint_x: 0.3
                    halign: 'center'
                    md_bg_color: app.theme_cls.primary_color
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size: (self.parent.width,self.parent.height-60)
                GridLayout:
                    id: grid
                    size_hint_y: None
                    height: self.minimum_height
                    cols: 4
                    row_default_height: 60
                    adaptive_width: True
            
    MDFloatingActionButtonSpeedDial:
        data: {'add':'notebook-plus-outline', 'delete':'delete'}
        root_button_anim: True
        label_text_color: (1,1,1,1)
        callback: self.parent.add_delete


<CompanyDialog>:
    orientation: "vertical"
    spacing: "8dp"
    size_hint_y: None
    height: 350
    MDTextField:
        text: "Package"
    MDTextField:
        text: "Platform"
    MDTextField:
        text: "Website"
    MDTextField:
        text: "Role"
    MDTextField:
        text: "Branch"
    MDRoundFlatButton:
        text: "Edit"
