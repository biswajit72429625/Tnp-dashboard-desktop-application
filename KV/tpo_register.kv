#:kivy 2.0.0
<TpoRegister>
    Background:
    MDIconButton:
        icon:"keyboard-backspace"
        md_bg_color: app.theme_cls.primary_light
        pos_hint:{"x":.05,"y":.9}
        on_press:root.manager.current="login"
        on_press: root.manager.stack.append(root.name)
    MDCard:
        size_hint: (0.5,0.9)
        pos_hint: {'center_x': .5, 'center_y': .5}
        elevation: 10
        orientation: 'vertical'
        padding: 25
        spacing: 25
        MDLabel:
            theme_text_color: "Custom"
            text_color: 0, 150/255, 136/255, 1
            halign: 'center'
            text: "Register Yourself"
            font_style: 'H6'
            padding: (10,10)
            size_hint_y: None
            height: self.texture_size[1]
            font_size:30
        MDTextField:
            id: name
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            icon_right:'account'
            pos_hint: {'center_x':0.5}
            hint_text:"Name"
            size_hint_x:0.7
        MDTextField:
            id: email
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            icon_right:'email'
            pos_hint: {'center_x':0.5}
            hint_text:"Email"
            size_hint_x:0.7
        MDTextField:
            id:password
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            pos_hint: {'center_x':0.5}
            icon_right:'key'
            hint_text:"Password"
            size_hint_x:0.7
        MDTextField:
            id: confirm_password
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color                                                                                                     
            icon_right:'key'
            pos_hint: {'center_x':0.5}
            hint_text:"Confirm Password"
            size_hint_x:0.7
        #MDDropDownItem:
            #id: dropdown_item
            #text: 'CSE'
            #current_item:'CSE'
            #on_release: root.menu.open()
        MDRectangleFlatButton:
            id: dropdown_item
            text: "Choose Department"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.menu.open()
        MDRaisedButton:
            text:"Register"
            pos_hint: {'center_x':0.5}