#:kivy 2.0.0
<AddEresources>
    Background:
    Navbar:
    MDLabel:
        pos_hint: {'center_x': .5, 'y': .77}
        halign: 'center'
        theme_text_color: "Custom"
        text_color: 0, 150/255, 136/255, 1
        text: "Add E-Resources"
        font_style: 'H6'
        padding: (10,15)
        size_hint_y: None
        height: self.texture_size[1]
        font_size:30
    MDCard:
        size_hint: (0.4,0.7)
        pos_hint: {'center_x': .27, 'center_y': .4}
        elevation: 10
        orientation: 'vertical'
        padding: 25
        spacing: 25
        MDLabel:
            text:"star marked are compulsory"
            theme_text_color:"Secondary"
            halign:"center"
        MDTextField:
            id:e_name
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            icon_right:'account'
            size_hint_x: None
            width: 200
            pos_hint: {'center_x':0.48}
            hint_text: "Name *"
            on_text_validate: root.change_field('e_organiser')
        MDTextField:
            id:e_organiser
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            icon_right:'account-group'
            size_hint_x: None
            width: 200
            pos_hint: {'center_x':0.48}
            hint_text: "Organiser Name *"
            on_text_validate: root.change_field('e_link')
        MDTextField:
            id:e_link
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            icon_right:'link'
            size_hint_x: None
            width: 200
            pos_hint: {'center_x':0.48}
            hint_text: "Link *"
            on_text_validate: root.change_field('e_description')
        MDTextField:
            id:e_description
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            icon_right:'grease-pencil'
            size_hint_x: None
            width: 200
            pos_hint: {'center_x':0.48}
            hint_text: "Description"
        

    MDCard:
        size_hint: (0.4,0.7)
        pos_hint: {'center_x': .74, 'center_y': .4}
        elevation: 10
        orientation: 'vertical'
        padding: 30
        spacing: 20
        MDRectangleFlatButton:
            id: dropdown_item
            text: "Passing Year"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.menu.open()
        
        GridLayout:
            cols:2
            MDCheckbox:
                id:checkbox_id
                size_hint: (0.1,0.1)
                on_active: root.checkbox(self,self.active)
                pos_hint:{"x":.23,"y":.2}
            MDLabel:
                halign: 'center'
                text: "use current date and time?"
                #font_style: 'H5'
                #size_hint_y: None
                #height: self.texture_size[1]
        GridLayout:
            cols:2
            MDLabel:
                halign: 'center'
                text: "Schedule on :  "
                #font_style: 'H5'
                #padding: (10,15)
                size_hint_y: None
                height: self.texture_size[1]
            MDRaisedButton:
                pos_hint: {'center_x': .6}
                text:"Select Date"
                id : date_label
                #width: self.parent.width-30
                on_release: root.show_date_picker()
        GridLayout:
            cols:2
            MDLabel:
                halign: 'center'
                text: "Schedule At :  "
                #font_style: 'H5'
                #padding: (10,15)
                size_hint_y: None
                height: self.texture_size[1]
            MDRaisedButton:
                text: "Select Time"
                width: self.parent.width-1000
                pos_hint: {'center_x': .6}
                id: time_label
                on_release: root.show_time_picker()
       
        MDRectangleFlatButton:
            text: "Clear"
            pos_hint: {'center_x': .5}
            font_size: 15
            on_release: root.clear()
        MDRectangleFlatButton:
            text: "Save"
            pos_hint: {'center_x': .5}
            font_size: 15
            on_release: root.submit()