#:kivy 2.0.0
<AddEresources>
    Navbar:
    MDCard:
        size_hint: (0.4,0.7)
        pos_hint: {'center_x': .27, 'center_y': .4}
        elevation: 10
        orientation: 'vertical'
        padding: 25
        spacing: 20
        Widget:
        Widget:
        MDTextField:
            id:e_name
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            icon_right:'account'
            size_hint_x: None
            width: 200
            pos_hint: {'center_x':0.45}
            hint_text: "Name"
        MDTextField:
            id:e_organiser
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            icon_right:'account-group'
            size_hint_x: None
            width: 200
            pos_hint: {'center_x':0.45}
            hint_text: "Organiser Name"
        MDTextField:
            id:e_link
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            icon_right:'link'
            size_hint_x: None
            width: 200
            pos_hint: {'center_x':0.45}
            hint_text: "Link"
        MDRectangleFlatButton:
            id: dropdown_item
            text: "Choose Department"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.menu.open()
        Widget:

    MDCard:
        size_hint: (0.4,0.7)
        pos_hint: {'center_x': .74, 'center_y': .4}
        elevation: 10
        orientation: 'vertical'
        padding: 25
        spacing: 20
        Widget:
        Widget:
        MDLabel:
            halign: 'center'
            text: "Schedule on"
            font_style: 'H6'
            padding: (10,15)
            size_hint_y: None
            height: self.texture_size[1]
        MDRaisedButton:
            pos_hint: {'center_x': .6}
            text:"Select Date"
            id : date_label
            on_release: root.show_date_picker()
        MDLabel:
            halign: 'center'
            text: "Schedule At"
            font_style: 'H6'
            padding: (10,15)
            size_hint_y: None
            height: self.texture_size[1]
        MDRaisedButton:
            text: "Open time picker"
            pos_hint: {'center_x': .6}
            id: time_label
            on_release: root.show_time_picker()
        MDRoundFlatButton:
            text: "Clear"
            pos_hint: {'center_x': .6}
            font_size: 20
        MDRoundFlatButton:
            text: "Save"
            pos_hint: {'center_x': .6}
            font_size: 20
            
    