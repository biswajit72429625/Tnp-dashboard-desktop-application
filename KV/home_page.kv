#:kivy 2.0.0
<HomePage>
    Background:
    Navbar:
    MDCard:
        size_hint: (0.22,0.4)
        pos_hint: {'center_x': .125, 'center_y': .5}
        elevation: 20
        orientation: 'vertical'
        padding: 18
        spacing: 30
        MDIconButton:
            halign:"center"
            icon:"registered-trademark"
            user_font_size:"100sp"
            md_bg_color: app.theme_cls.primary_light
            pos_hint:{"x":.065}
            on_press:root.load_pre_register_students()
            on_press:root.manager.current="pre_register"
            on_press: root.manager.stack.append(root.name)
        MDRectangleFlatButton:
            halign:"center"
            text:"register student"
            font_size:16
            pos_hint:{"x":.01}
            on_press:root.load_pre_register_students()
            on_press:root.manager.current="pre_register"
            on_press: root.manager.stack.append(root.name)
    MDCard:
        size_hint: (0.22,0.4)
