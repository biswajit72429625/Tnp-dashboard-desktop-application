#:kivy 2.0.0
<HomePage>
    Background:
    Navbar:
    MDCard:
        size_hint: (0.22,0.32)
        pos_hint: {'center_x': .35, 'center_y': .65}
        elevation: 20
        orientation: 'vertical'
        padding: 10
        spacing: 22
        MDIconButton:
            halign:"center"
            icon:"registered-trademark"
            user_font_size:"80sp"
            md_bg_color: app.theme_cls.primary_light
            pos_hint:{"x":.15}
            on_press:root.load_pre_register_students()
            on_press:root.manager.current="pre_register"
            on_press: root.manager.stack.append(root.name)
        MDRectangleFlatButton:
            halign:"center"
            text:"Register Student"
            font_size:15
            pos_hint:{"x":.08}
