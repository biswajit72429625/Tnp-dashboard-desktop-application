#:kivy 2.0.0
<HomePage>
    Navbar:

    MDLabel:
        text: "Content"
        halign: "center"
    MDCard:
        size_hint: (0.8,0.5)
        pos_hint: {'center_x': .5, 'center_y': .45}
        elevation: 10
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        MDRectangleFlatButton:
            text:"E-Resources"
            size_hint_y: .5
            pos_hint:{"center_y":.5}
            font_size:30
            on_press:root.manager.current="view_eresources"
            on_press:root.manager.stack.append(root.name)
        MDRectangleFlatButton:
            text:"Assesments"
            size_hint_y: .5
            pos_hint:{"center_y":.5}
            font_size:30
            on_press:root.manager.current="view_assessments"
            on_press:root.manager.stack.append(root.name)
        MDRectangleFlatButton:
            text:"Placements"
            size_hint_y: .5
            pos_hint:{"center_y":.5}
            font_size:30
            on_press:root.manager.current="placements"
            on_press:root.manager.stack.append(root.name)

            
    