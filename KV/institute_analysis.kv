#:kivy 2.0.0
<InstituteAnalysis>
    Background:
    Navbar:
    FloatLayout:
        size: root.width, root.height
        MDLabel:
            pos_hint: {'center_x': .5, 'y': .77}
            halign: 'center'
            theme_text_color: "Custom"
            text_color: 0, 150/255, 136/255, 1
            text: "Package"
            font_style: 'H6'
            padding: (10,15)
            size_hint_y: None
            height: self.texture_size[1]
            font_size:30
        MDCard:
            size_hint : (0.9,0.7)
            pos_hint: {'center_x': .5, 'center_y': .45}
            elevation: 20
            orientation: 'vertical'
            spacing: 2
            MDGridLayout:
                size: (self.parent.width,60)
                height: self.minimum_height
                size_hint_x: None
                size_hint_y: None
                cols: 9
                row_default_height: 60
                row_force_default: True
                adaptive_width: True
                MDLabel:
                    text: "Package (LPA)"
                    font_size: 20
                    halign: 'center'
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "No. of Offers"
                    font_size: 20
                    halign: 'center'
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "Unique Placed"
                    font_size: 20
                    halign: 'center'
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "Civil"
                    font_size: 20
                    halign: 'center'
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "Mech"
                    font_size: 20
                    halign: 'center'
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "CSE"
                    font_size: 20
                    halign: 'center'
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "ENTC"
                    font_size: 20
                    halign: 'center'
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "ELN"
                    font_size: 20
                    halign: 'center'
                    md_bg_color: app.theme_cls.primary_color
                MDLabel:
                    text: "IT"
                    font_size: 20
                    halign: 'center'
                    md_bg_color: app.theme_cls.primary_color
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size: (self.parent.width,self.parent.height-60)
                GridLayout:
                    id: grid
                    size_hint_y: None
                    height: self.minimum_height
                    cols: 9
                    row_default_height: 60
                    adaptive_width: True

    # MDIconButton:
    #     icon:"file-export"
