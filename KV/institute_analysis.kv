    #     on_press: root.prepare_graphs()
    #     on_press: root.manager.current="institute_graphs"
    #     on_press: root.manager.stack.append(root.name)

    MDRaisedButton:
        text:"More"
        size_hint: (0.15,0.05)
        pos_hint: {'center_x': .8,'center_y': .05}
        font_size:16
        on_press: root.prepare_graphs()
        on_press: root.manager.current="institute_graphs"
        on_press: root.manager.stack.append(root.name)


<InstituteTableTitleLabel>
    text: ""
    font_size: 20
