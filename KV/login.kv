#:kivy 2.0.0
<Login>
    Background:
    MDCard:
        size_hint: (0.5,0.8)
        pos_hint: {'center_x': .5, 'center_y': .5}
        elevation: 30
        orientation: 'vertical'
        padding: 25
        spacing: 40
        # Widget:
        
        MDLabel:
            halign: 'center'
            theme_text_color: "Custom"
            text_color: 0, 150/255, 136/255, 1
            text: "Training & Placement"
            font_style: 'H6'
            padding: (10,15)
            size_hint_y: None
            height: self.texture_size[1]
            font_size:30
        MDTextField:
            id:email
            size_hint_x: None
            width: 300
            pos_hint: {'center_x':0.5}
            icon_right: "email"
            hint_text: "Email"
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
        MDTextField:
            size_hint_x: None
            id:password
            width: 300
            pos_hint: {'center_x':0.5}
            icon_right: "key"
            hint_text: "Password"
            password: True
            font_size: 20
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
        MDRaisedButton:
            text: "Login"
            size_hint_x: 0.4
            font_size: 20
            pos_hint: {'center_x':0.5}
            on_press:root.manager.current="home_page"
            on_press: root.manager.stack.append(root.name)
        MDRaisedButton:
            size_hint_x: 0.4
            text: "Register"
            font_size: 20
            pos_hint: {'center_x':0.5}
            on_press:root.manager.current="tpo_register"
            on_press: root.manager.stack.append(root.name)

        
