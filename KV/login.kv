#:kivy 2.0.0
<Login>
    MDCard:
        size_hint: (0.5,0.8)
        pos_hint: {'center_x': .5, 'center_y': .5}
        elevation: 20
        orientation: 'vertical'
        padding: 25
        spacing: 40
        # Widget:
        MDLabel:
            halign: 'center'
            text: "Training&Placement"
            font_style: 'H4'
            padding: (10,15)
            size_hint_y: None
            height: self.texture_size[1]
        MDTextField:
            id:email
            size_hint_x: None
            width: 200
            pos_hint: {'center_x':0.5}
            icon_right: "email"
            hint_text: "Email"
        MDTextField:
            size_hint_x: None
            id:password
            width: 200
            pos_hint: {'center_x':0.5}
            icon_right: "key"
            hint_text: "Password"
            password: True
            font_size: 20
        MDRoundFlatButton:
            text: "Login"
            size_hint_x: 0.4
            font_size: 20
            pos_hint: {'center_x':0.5}
            on_press:root.manager.current="home_page"
            on_press: root.manager.stack.append(root.name)
        MDRoundFlatButton:
            size_hint_x: 0.4
            text: "Register"
            font_size: 20
            pos_hint: {'center_x':0.5}
            on_press:root.manager.current="tpo_register"
            on_press: root.manager.stack.append(root.name)
        # Widget:
                
    MDRoundFlatButton:
        text: "Manage_Students"
        font_size: 15
        pos_hint: {'x':0.8,'y':0.3}
        on_press: root.manager.current = 'manage_students'
        on_press: root.manager.stack.append(root.name)
