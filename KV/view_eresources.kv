#:kivy 2.0.0
<ViewEresources>
    Background:
    Navbar:
    FloatLayout:
        size: root.width, root.height
        MDLabel:
            pos_hint: {'center_x': .5, 'y': .77}
            halign: 'center'
            theme_text_color: "Custom"
            text_color: 0, 150/255, 136/255, 1
            text: "E-Resources"
            font_style: 'H6'
            padding: (10,15)
            size_hint_y: None
            height: self.texture_size[1]
            font_size:30
        MDCard:
            size_hint : (0.9,0.7)
            pos_hint: {'center_x': .5, 'center_y': .4}
            elevation: 20
            orientation: 'vertical'
            spacing: 2
            MDGridLayout:
                size: (self.parent.width,60)
                height: self.minimum_height
                size_hint_x: None
                size_hint_y: None
                cols: 4
                row_default_height: 60
                row_force_default: True
                adaptive_width: True
                MDLabel:
                    text: ""
                    size_hint: (0.1,0.1)
                    md_bg_color: app.theme_cls.accent_color
                MDLabel:
                    text: "Title"
                    text_color: 1, 1, 1, 1
                    font_size: 25
                    font_style:"H6"
                    halign: 'center'
                    size_hint_x: 0.3
                    theme_text_color: "Custom"
                    md_bg_color: app.theme_cls.accent_color
                MDLabel:
                    text: "Visible DateTime"
                    text_color: 1, 1, 1, 1
                    font_size: 25
                    font_style:"H6"
                    size_hint_x: 0.3
                    halign: 'center'
                    theme_text_color: "Custom"
                    md_bg_color: app.theme_cls.accent_color
                MDLabel:
                    text: "Batch"
                    text_color: 1, 1, 1, 1
                    font_size: 25
                    font_style:"H6"
                    size_hint_x: 0.3
                    theme_text_color: "Custom"
                    halign: 'center'
                    md_bg_color: app.theme_cls.accent_color
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size: (self.parent.width,self.parent.height-60)
                GridLayout:
                    id: grid
                    size_hint_y: None
                    height: self.minimum_height
                    cols: 4
                    row_default_height: 60
                    adaptive_width: True

    MDFloatingActionButtonSpeedDial:
        data: {'add':'notebook-plus-outline', 'delete':'delete'}
        root_button_anim: True
        label_text_color: (1,1,1,1)
        callback: self.parent.add_delete


<EResourceDialog>:
    orientation: "vertical"
    spacing: "8dp"
    size_hint_y: None
    height: 380
    MDGridLayout:
        cols: 2
        width: self.parent.width
        spacing: 20
        MDLabel:
            text: "Passing Year"
        MDRectangleFlatButton:
            id: dialog_passyear
            on_release: root.menu.open()
    MDTextField:
        id: dialog_branch
        hint_text: "Branch"
        # line_color_normal: app.theme_cls.primary_color
    MDTextField:
        id: dialog_organizer
        hint_text: "Organizer"
        # line_color_normal: app.theme_cls.primary_color
    MDTextField:
        id: dialog_link
        hint_text: "Link"
        # line_color_normal: app.theme_cls.primary_color
    MDGridLayout:
        cols: 3
        width: self.parent.width
        spacing: 20
        MDLabel:
            text: "Visible datetime"
        MDRaisedButton:
            id: dialog_visible_date
            on_release: app.root.get_screen('view_eresources').show_date_picker()
        MDRaisedButton:
            id: dialog_visible_time
            on_release: app.root.get_screen('view_eresources').show_time_picker()
    MDTextField:
        id: dialog_description
        hint_text: "Description"
        # line_color_normal: app.theme_cls.primary_color
    MDRoundFlatButton:
        id: dialog_edit
        text: "Edit"
        on_press: app.root.get_screen('view_eresources').edit_eresource()
        
<EResourceTitle>
    text: "[u][ref=world]7[/ref][/u]"
    markup : True
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color
    font_size: 20
    halign: 'center'
    size_hint_x: 0.3
    on_ref_press: app.root.get_screen('view_eresources').full_details(self.id)

<EResourceLabel>
    text: "E-Resources"
    font_size: 20
    size_hint_x: 0.3
    halign: 'center'

<EResourceCheckbox>
    size_hint: (0.1,0.1)