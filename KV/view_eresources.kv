#:kivy 2.0.0
<ViewEresources>
    Background:
    Navbar:
    FloatLayout:
        size: root.width, root.height
        MDLabel:
            text: "E-Resources"
            color:app.theme_cls.primary_color
            pos_hint: {'center_x':0.5,'center_y':0.81}
            font_style: 'H6'
            halign: 'center'
            font_size:35
        MDCard:
            size_hint : (0.9,0.7)
            pos_hint: {'center_x': .5, 'center_y': .4}
            elevation: 20
            orientation: 'vertical'
            spacing: 2
            MDGridLayout:
                size: (self.parent.width,60)
                height: self.minimum_height
                size_hint_x: None
                size_hint_y: None
                cols: 4
                row_default_height: 60
                row_force_default: True
                adaptive_width: True
                MDLabel:
                    text: ""
                    size_hint: (0.1,0.1)
                    md_bg_color: app.theme_cls.accent_color
                MDLabel:
                    text: "Title"
                    text_color: 1, 1, 1, 1
                    font_size: 25
                    font_style:"H6"
                    halign: 'center'
                    size_hint_x: 0.3
                    theme_text_color: "Custom"
                    md_bg_color: app.theme_cls.accent_color
                MDLabel:
                    text: "Date"
                    text_color: 1, 1, 1, 1
                    font_size: 25
                    font_style:"H6"
                    size_hint_x: 0.3
                    halign: 'center'
                    theme_text_color: "Custom"
                    md_bg_color: app.theme_cls.accent_color
                MDLabel:
                    text: "Batch"
                    text_color: 1, 1, 1, 1
                    font_size: 25
                    font_style:"H6"
                    size_hint_x: 0.3
                    theme_text_color: "Custom"
                    halign: 'center'
                    md_bg_color: app.theme_cls.accent_color
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size: (self.parent.width,self.parent.height-60)
                GridLayout:
                    id: grid
                    size_hint_y: None
                    height: self.minimum_height
                    cols: 4
                    row_default_height: 60
                    adaptive_width: True

    MDFloatingActionButtonSpeedDial:
        data: {'add':'notebook-plus-outline', 'delete':'delete'}
        root_button_anim: True
        label_text_color: (1,1,1,1)
        callback: self.parent.add_delete


<EResourceDialog>:
    orientation: "vertical"
    spacing: "8dp"
    size_hint_y: None
    height: 370
    MDTextField:
        text: "PassYear"
    MDTextField:
        text: "Branch"
    MDTextField:
        text: "Organizer"
    MDTextField:
        text: "Link"
    MDTextField:
        text: "Visible on"
    MDTextField:
        text: "Description"
    MDRoundFlatButton:
        text: "Edit"

<EResourceTitle>
    text: "[u][ref=world]7[/ref][/u]"
    markup : True
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color
    font_size: 20
    halign: 'center'
    size_hint_x: 0.3
    on_ref_press: app.root.get_screen('view_eresources').full_details(self.id)

<EResourceLabel>
    text: "E-Resources"
    font_size: 20
    size_hint_x: 0.3
    halign: 'center'

<EResourceCheckbox>
    size_hint: (0.1,0.1)