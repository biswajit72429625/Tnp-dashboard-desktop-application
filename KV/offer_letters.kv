#:kivy 2.0.0
#:import webbrowser webbrowser
#:import date datetime.date
<OfferLetters>
    Background:
    Navbar:
    FloatLayout:
        size: root.width, root.height
        MDLabel:
            theme_text_color: "Custom"
            text_color: 0, 150/255, 136/255, 1
            text: "Offer Letters"
            pos_hint: {'center_x':0.5,'center_y':0.85}
            font_style: 'H6'
            halign: 'center'
            font_size:30
        MDCard:
            size_hint : (0.65,0.7)
            pos_hint: {'center_x': .35, 'center_y': .45}
            elevation: 20
            orientation: 'vertical'
            spacing: 2
            MDGridLayout:
                size: (self.parent.width,60)
                height: self.minimum_height
                size_hint_x: None
                size_hint_y: None
                cols: 4
                row_default_height: 60
                row_force_default: True
                adaptive_width: True
                Button:
                    text_color: 1, 1, 1, 1
                    theme_text_color: "Custom"
                    text: "Name"
                    font_size: 20
                    # halign: 'center'
                    size_hint_x: 0.3
                    background_normal: ''
                    background_color: app.theme_cls.primary_color
                    on_press: root.sort_by(1)
                Button:
                    text_color: 1, 1, 1, 1
                    theme_text_color: "Custom"
                    text: "Company"
                    font_size: 20
                    # halign: 'center'
                    size_hint_x: 0.3
                    background_normal: ''
                    background_color: app.theme_cls.primary_color
                    on_press: root.sort_by(3)
                    
                Button:
                    text_color: 1, 1, 1, 1
                    theme_text_color: "Custom"
                    text: "Role"
                    font_size: 20
                    # halign: 'center'
                    size_hint_x: 0.3
                    background_normal: ''
                    background_color: app.theme_cls.primary_color
                    on_press: root.sort_by(4)
                Button:
                    text_color: 1, 1, 1, 1
                    theme_text_color: "Custom"
                    text: "Package"
                    font_size: 20
                    # halign: 'center'
                    size_hint_x: 0.3
                    background_normal: ''
                    background_color: app.theme_cls.primary_color
                    on_press: root.sort_by(5)
                    
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size: (self.parent.width,self.parent.height-60)
                GridLayout:
                    id: grid
                    size_hint_y: None
                    height: self.minimum_height
                    cols: 4
                    row_default_height: 60
                    adaptive_width: True

        MDCard:
            size_hint : (0.3,0.5)
            pos_hint: {'center_x': .84, 'center_y': .45}
            elevation: 20
            orientation: 'vertical'
            padding: (20,40)
            spacing: 10
            Widget:
            MDRectangleFlatButton:
                id: dropdown_item
                text: "Search by"
                on_release: root.menu.open()
                width: self.parent.width-30
                line_color: app.theme_cls.accent_color
                text_color: app.theme_cls.accent_color
            MDTextField:
                id:search_text
                size_hint_x: None
                width: self.parent.width-30
                icon_right: "email"
                hint_text: "Text"
                color_mode: 'accent'
                icon_right_color:app.theme_cls.accent_color
            MDRectangleFlatButton:
                id: search
                text: "Search"
                width: self.parent.width-30
                md_bg_color: app.theme_cls.accent_color
                line_color: app.theme_cls.accent_color
                text_color: app.theme_cls.accent_color
                on_release: root.search_data()
            Widget:
                               
    MDGridLayout:
        size_hint: (1,0.07)
        cols: 2
        MDRaisedButton:
            id: 0
            text: str(date.today().year)
            font_size: 20
            md_bg_color: app.theme_cls.accent_color
            size_hint:None,None
            size: (self.parent.width/2,self.parent.height)
            on_press: root.load_offer(0)
        MDRaisedButton:
            id: 1
            text: str(date.today().year+1)
            font_size: 20
            md_bg_color: app.theme_cls.accent_color
            size_hint:None,None
            size: (self.parent.width/2,self.parent.height)
            on_press: root.load_offer(1)
                               

<OfferDialog>:
    orientation: "vertical"
    spacing: "8dp"
    size_hint_y: None
    height: 370
    GridLayout:
        cols: 2
        spacing : 20
        MDTextField:
            id: dialog_student_name
            hint_text: "Student Name"
        MDTextField:
            id: dialog_student_email
            hint_text: "Student Email"
    MDTextField:
        id: dialog_company_name
        hint_text: "Company Name"
    GridLayout:
        cols: 3
        spacing : 10
        MDTextField:
            id: dialog_company_role
            hint_text: "Role"
        MDTextField:
            id: dialog_company_package
            hint_text: "Package"
        MDTextField:
            id: dialog_company_platform
            hint_text: "Platform"
    MDRectangleFlatIconButton:
        id: dialog_offer_link
        icon: "link-variant"
        text: "Offer Letter"
        on_press: webbrowser.open(app.root.get_screen('offer_letters').offer_records[app.root.get_screen('offer_letters').id][7])
    GridLayout:
        cols: 2
        spacing : 20
        MDTextField:
            id: dialog_date_of_interview
            hint_text: "Date of Interview"
        MDTextField:
            id: dialog_date_of_offer_letter
            hint_text: "Date of Offer Letter"
    GridLayout:
        cols: 2
        spacing : 20
        MDLabel:
            text: "Finalised"
        Spinner:
            id: dialog_finalised
            pos_hint:{"x":0.08}
            values:('Confirmed','Not-Confirmed')
            size:300,44
            size_hint:None,None
            color_mode: 'accent'
            background_normal:""
            background_color:(98/255,0/255,234/255,1)
    MDRoundFlatButton:
        text: "Edit"
        on_press: app.root.get_screen('offer_letters').edit_offer()

<OfferLetterTitle>
    text: "[u][ref=world]7[/ref][/u]"
    markup : True
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color
    font_size: 20
    halign: 'center'
    size_hint_x: 0.3
    on_ref_press: app.root.get_screen('offer_letters').full_details(self.id)

<OfferLetterLabel>
    text: "E-Resources"
    font_size: 20
    size_hint_x: 0.3
    halign: 'center'