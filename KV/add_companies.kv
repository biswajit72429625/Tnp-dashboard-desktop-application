#:kivy 2.0.0
<AddCompanies>
    Background:
    Navbar:
    MDCard:
        size_hint: (0.5,0.86)
        pos_hint: {'center_x': .5, 'center_y': .45}
        elevation: 30
        orientation: 'vertical'
        padding: 25
        spacing: 22
        #MDLabel:
            #text:"star marked are compulsory"
            #theme_text_color:"Secondary"
            #halign:"center"
        MDTextField:
            id:name
            size_hint_x: None
            width: 300
            pos_hint: {'center_x':0.5}
            icon_right: "account"
            hint_text: "Company Name"
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            on_text_validate: root.change_field('link')
        MDTextField:
            id:link
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            icon_right:'link'
            size_hint_x: None
            width: 300
            pos_hint: {'center_x':0.48}
            hint_text: "Company's website Link"
            on_text_validate: root.change_field('package')
        MDTextField:
            id:package
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            icon_right:'cash'
            size_hint_x: None
            width: 300
            pos_hint: {'center_x':0.48}
            hint_text: "Package"
            helper_text:"only float numbers (2.4,3.4)"
            helper_text_mode:"on_focus"
        Spinner:
            id:type
            pos_hint:{"x":0.08}
            text : "Placement Type"
            values:('On-campus','Off-campus')
            size:300,44
            size_hint:None,None
            color_mode: 'accent'
            background_normal:""
            background_color:(98/255,0/255,234/255,1)
        MDRectangleFlatButton:
            id: dropdown_item
            text: "Choose Role"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.manager.get_screen("view_companies").menu.open()
        MDTextField:
            id:role
            color_mode: 'accent'
            icon_right_color:app.theme_cls.accent_color
            icon_right:'shield-account-outline'
            size_hint_x: None
            width: 300
            pos_hint: {'center_x':0.48}
            hint_text: "role"
            disabled: True
        MDRectangleFlatButton:
            text: "Save"
            pos_hint: {'center_x': .5}
            on_press:root.verify()
