#:kivy 2.0.0
<Placements>
    Navbar:
    FloatLayout:
        size:root.width,root.height
        MDLabel:
            size_hint:(.2,.2)
            text: "Placements"
            pos_hint:{"x":0.5,"y":0.8}
        MDRectangleFlatButton:
            text:"Manage Companies"
            #size_hint_y: .3
            pos_hint:{"x":.5,"y":.5}
            font_size:20
            on_press:root.manager.current="view_companies"
            on_press: root.manager.stack.append(root.name)
        MDRectangleFlatButton:
            text:"Manage Students"
            #size_hint_y: .3
            pos_hint:{"x":.3,"y":.7}
            font_size:20
            on_press:root.manager.current="manage_students"
            on_press: root.manager.stack.append(root.name)
        MDRectangleFlatButton:
            text:"View Offer Letters"
            #size_hint_y: .3
            pos_hint:{"x":.3,"y":.3}
            font_size:20
            on_press:root.manager.current="offer_letters"
            on_press: root.manager.stack.append(root.name)
        MDRectangleFlatButton:
            text:"Finalise offers"
            #size_hint_y: .3
            pos_hint:{"x":.7,"y":.7}
            font_size:20
            on_press:root.manager.current="finalize_offer"
            on_press: root.manager.stack.append(root.name)
        MDRectangleFlatButton:
            text:"Analyse data"
            #size_hint_y: .3
            pos_hint:{"x":.7,"y":.3}
            font_size:20