#:kivy 2.0.0
<Placements>
    Background:
    Navbar:
    MDLabel:
        halign: 'center'
        theme_text_color: "Custom"
        text_color: 0, 150/255, 136/255, 1
        text: "Placements"
        font_style: 'H6'
        padding: (10,15)
        size_hint_y: None
        height: self.texture_size[1]
        font_size:30
        pos_hint:{"y":0.75}
    MDCard:
        size_hint: (0.22,0.32)
        pos_hint: {'center_x': .35, 'center_y': .55}
        elevation: 20
        orientation: 'vertical'
        padding: 10
        spacing: 22
        MDIconButton:
            halign:"center"
            icon:"office-building-marker"
            user_font_size:"80sp"
            md_bg_color: app.theme_cls.primary_light
            pos_hint:{"x":.15}
            on_press:root.load_companies()
            on_press:root.manager.current="view_companies"
            on_press: root.manager.stack.append(root.name)
        MDRectangleFlatButton:
