#:kivy 2.0.0
<ForgotPass>
    Background:
    MDLabel:
        pos_hint: {'center_x': .5, 'y': .87}
        halign: 'center'
        theme_text_color: "Custom"
        text_color: 0, 150/255, 136/255, 1
        text: "Forgot Password"
        font_style: 'H6'
        padding: (10,15)
        size_hint_y: None
        height: self.texture_size[1]
        font_size:30
    MDIconButton:
        icon:"keyboard-backspace"
        md_bg_color: app.theme_cls.primary_light
        pos_hint:{"x":.05,"y":.9}
        on_press:root.manager.current="login"
        on_press: root.manager.stack.append(root.name)
    MDCard:
        size_hint: (0.5,0.84)
        pos_hint: {'center_x': .5, 'center_y': .46}
        elevation: 30
        orientation: 'vertical'
        padding: 25
        spacing: 30
        MDLabel:
            text:"To get an otp on email , type your email and click send"
            theme_text_color:"Secondary"
            halign:"center"
        GridLayout:
            spacing: 60
            cols:2 
            MDTextField:
                id:email
                hint_text:"Email"
                size_hint_x: None
                width: 200
                pos_hint: {'center_x':0.5}
                #icon_right: "key"
                color_mode: 'accent'
            MDRaisedButton:
                text: "Send"
                font_size: 15
                pos_hint: {'center_x':0.5}  
                on_press: root.send_mail()
        GridLayout:
            spacing: 60
            cols:2 
            MDTextField:
                id:otp
                mode:"rectangle"
                size_hint_x:None
                #size_hint_y: .8
                width: 200
                pos_hint: {'center_x':0.6}
                hint_text: "OTP"
                #font_size: 20
                color_mode: 'accent'
                icon_right_color:app.theme_cls.accent_color
            MDRectangleFlatButton:
                #size_hint_y: 0.6
                text: "Verify"
                font_size: 15
                pos_hint: {'center_x':0.8}
                on_press: root.verify()
        Widget:
        MDTextField:
            id:new_pass
            hint_text:"New Password"
            size_hint_x: None
            width: 300
            pos_hint: {'center_x':0.5}
            icon_right: "key"
            color_mode: 'accent' 
            disabled: True 
            password: True
        MDTextField:
            id:confirm_pass
            hint_text:"Confirm Password"
            size_hint_x: None
            width: 300
            pos_hint: {'center_x':0.5}
            icon_right: "key"
            color_mode: 'accent'
            disabled: True
            password: True
        MDRaisedButton:
            id:change
            #size_hint_x: 0.4
            text: "Change"
            #font_size: 20
            pos_hint: {'center_x':0.5}
            disabled: True
            on_press: root.change_password()

    