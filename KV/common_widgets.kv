#:kivy 2.0.0
<Navbar@MDFloatLayout>
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            id: officer_name
            md_bg_color: app.theme_cls.accent_color
            elevation: 20
            title: app.officer_name
            left_action_items: [["keyboard-backspace", lambda x: root.parent.manager.callback()]]
        MDLabel:
            text:""
    MDLabel:
        id: officer_branch
        text:"Branch : "+app.officer_branch
        font_style: 'H6'
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        font_size:20
        size_hint:(0.3,.1)
        pos_hint:{"x":.78,"y":0.9}
    

<Navbar2@MDFloatLayout>
    # used for pages which have bottom navigation bar
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            id: officer_name
            md_bg_color: app.theme_cls.accent_color
            elevation: 10
            title: app.officer_name
            left_action_items: [["keyboard-backspace", lambda x: root.parent.parent.parent.parent.manager.callback()]]
        MDLabel:
            text:""
    MDLabel:
        id: officer_branch
        text:"Branch : "+app.officer_branch
        font_style: 'H6'
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        font_size:20
        size_hint:(0.3,.1)
        pos_hint:{"x":.75,"y":0.9}
    
<Background@Image>
    source: 'login.jpeg'
    size: self.size
    allow_stretch: True
